<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_lineas_view" model="ir.ui.view">
        <field name="name">Lineas facturas</field>
        <field name="model">xls.invoice.lineasfac</field>
        <field name="arch" type="xml">
            <form string="Reporte de líneas de factura">
                <!-- Campo técnico -->
                <field name="no_resultado" invisible="1"/>

                <!-- Mensaje de error: solo visible cuando no_resultado es True -->
                <group invisible="not no_resultado">
                    <p>Error al encontrar lo que buscabas!</p>
                </group>

                <group col="4">
                    <field name="fecha_ini"/>
                    <field name="fecha_fin"/>
                    <field name="tipo_factura"/>
                </group>
                <footer>
                    <button name="print_xls_lineas"
                            string="Generar"
                            type="object"
                            default_focus="1"
                            class="oe_highlight"/>
                    <button string="Cancelar"
                            class="oe_link"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_invoice_lines_menu" model="ir.actions.act_window">
        <field name="name">Reporte líneas factura</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">xls.invoice.lineasfac</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="invoice_lineas_view"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_invoice_lineas"
        name="Líneas de factura"
        parent="account.menu_finance_reports"
        action="action_invoice_lines_menu"
        sequence="0"
    />

</odoo>
